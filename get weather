import requests

def get_weather(city, api_key):
    url = f"http://api.openweathermap.org/data/2.5/weather?q={city}&appid={api_key}&units=metric"
    try:
        response = requests.get(url)
        response.raise_for_status()
        data = response.json()
        
        print(f"\nğŸ“ Weather in {data['name']}, {data['sys']['country']}:")
        print(f"ğŸŒ¡ï¸ Temperature: {data['main']['temp']}Â°C")
        print(f"â˜ï¸ Condition: {data['weather'][0]['description'].capitalize()}")
        print(f"ğŸ’¨ Wind Speed: {data['wind']['speed']} m/s\n")

    except requests.exceptions.HTTPError:
        print("City not found. Please try again.")
    except Exception as e:
        print("An error occurred:", e)

if __name__ == "__main__":
    api_key = "your_openweathermap_api_key_here"  # Replace this with your actual API key
    city = input("Enter city name: ")
    get_weather(city, api_key)
